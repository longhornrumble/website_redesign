    <!-- Minimal Footer -->
    <footer class="bg-slate-900 border-t border-slate-800 py-8">
        <div class="max-w-6xl mx-auto px-4 sm:px-6">
            <div class="flex flex-col sm:flex-row justify-between items-center gap-4 text-sm text-slate-500">
                <div class="flex items-center gap-3">
                    <img
                        src="/images/logo-white.webp"
                        alt="MyRecruiter"
                        class="h-6 w-auto opacity-60"
                        width="109"
                        height="24"
                    />
                    <span>&copy; {currentYear} MyRecruiter</span>
                </div>
                <a href="mailto:info@myrecruiter.ai" class="text-slate-400 hover:text-white transition-colors">
                    info@myrecruiter.ai
                </a>
            </div>
        </div>
    </footer>
</Layout>

<style>
    .prose h2 {
        @apply text-2xl font-bold text-slate-900 mt-12 mb-4;
        font-family: 'Plus Jakarta Sans', system-ui, sans-serif;
    }
    .prose h3 {
        @apply text-xl font-bold text-slate-800 mt-8 mb-3;
        font-family: 'Plus Jakarta Sans', system-ui, sans-serif;
    }
    .prose p {
        @apply text-slate-600 leading-relaxed mb-4;
    }
    .prose ul {
        @apply list-disc list-outside ml-6 mb-4 space-y-2;
    }
    .prose li {
        @apply text-slate-600;
    }
    .prose a {
        @apply text-emerald-600 hover:text-emerald-700 underline;
    }
</style>
