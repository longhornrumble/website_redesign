---
import Layout from '../layouts/Layout.astro';
---

<Layout
    title="Page Not Found - MyRecruiter"
    description="The page you're looking for doesn't exist."
    canonical="https://www.myrecruiter.ai/404"
>
    <!-- Simple Header -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-slate-900 border-b border-slate-800">
        <div class="max-w-6xl mx-auto px-4 sm:px-10 py-5">
            <div class="flex items-center justify-center">
                <a href="/">
                    <img
                        src="/images/logo-white.webp"
                        alt="MyRecruiter"
                        class="h-11 w-auto"
                        width="200"
                        height="44"
                    />
                </a>
            </div>
        </div>
    </nav>

    <!-- 404 Content -->
    <section class="min-h-screen pt-32 pb-20 bg-slate-900 flex items-center">
        <div class="max-w-2xl mx-auto px-4 sm:px-6 text-center">
            <!-- 404 Badge -->
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-slate-800 border border-slate-700 mb-8">
                <span class="w-2 h-2 rounded-full bg-emerald-400 animate-pulse"></span>
                <span class="text-sm text-slate-400 font-medium">Error 404</span>
            </div>

            <!-- Main Message -->
            <h1 class="font-display text-5xl sm:text-6xl font-bold text-white mb-6">
                Page not found
            </h1>

            <p class="text-xl text-slate-400 mb-10 leading-relaxed">
                The page you're looking for doesn't exist or has been moved.
                Let's get you back on track.
            </p>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
                <a
                    href="/"
                    class="px-8 py-3.5 rounded-full bg-emerald-500 text-white font-semibold hover:bg-emerald-400 transition-all shadow-lg hover:shadow-emerald-500/25"
                >
                    Back to Homepage
                </a>
                <a
                    href="/demo"
                    class="px-8 py-3.5 rounded-full border-2 border-slate-600 text-slate-300 font-semibold hover:border-slate-500 hover:text-white transition-all"
                >
                    Book a Demo
                </a>
            </div>

            <!-- Helpful Links -->
            <div class="pt-10 border-t border-slate-800">
                <p class="text-sm text-slate-500 mb-6">Or try one of these:</p>
                <div class="flex flex-wrap justify-center gap-6 text-sm">
                    <a href="/#lean-teams" class="text-slate-400 hover:text-emerald-400 transition-colors">How It Works</a>
                    <a href="/#results" class="text-slate-400 hover:text-emerald-400 transition-colors">Results</a>
                    <a href="/#pricing" class="text-slate-400 hover:text-emerald-400 transition-colors">Pricing</a>
                    <a href="https://blog.myrecruiter.ai" class="text-slate-400 hover:text-emerald-400 transition-colors">Blog</a>
                    <a href="mailto:support@myrecruiter.ai" class="text-slate-400 hover:text-emerald-400 transition-colors">Contact Support</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Minimal Footer -->
    <footer class="bg-slate-900 border-t border-slate-800 py-8">
        <div class="max-w-6xl mx-auto px-4 sm:px-6">
            <div class="flex flex-col sm:flex-row justify-between items-center gap-4 text-sm text-slate-500">
                <div class="flex items-center gap-3">
                    <img
                        src="/images/logo-white.webp"
                        alt="MyRecruiter"
                        class="h-6 w-auto opacity-60"
                        width="109"
                        height="24"
                    />
                    <span>&copy; {new Date().getFullYear()} MyRecruiter</span>
                </div>
                <a href="mailto:support@myrecruiter.ai" class="text-slate-400 hover:text-white transition-colors">
                    support@myrecruiter.ai
                </a>
            </div>
        </div>
    </footer>
</Layout>
