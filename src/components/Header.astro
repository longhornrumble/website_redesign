---
const navLinks = [
    { label: 'How It Works', href: '#lean-teams' },
    { label: 'Results', href: '#results' },
    { label: 'Pricing', href: '#pricing' },
    { label: 'Blog', href: 'https://myrecruiter.ai/blog' }
];
---

<nav id="header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 bg-transparent">
    <div class="max-w-6xl mx-auto px-4 sm:px-10 py-5">
        <div class="flex items-center justify-between">
            <!-- Logo - consistent 44px height in both states -->
            <a href="/" class="flex items-center w-48">
                <img
                    id="logo-default"
                    src="/images/logo-white.webp"
                    alt="MyRecruiter"
                    class="h-11 w-auto"
                    width="200"
                    height="44"
                    fetchpriority="high"
                />
                <img
                    id="logo-scrolled"
                    src="/images/logo.webp"
                    alt="MyRecruiter"
                    class="h-11 w-auto hidden"
                    width="200"
                    height="44"
                />
            </a>

            <!-- Navigation Links -->
            <div class="hidden lg:flex items-center gap-12">
                {navLinks.map((item) => (
                    <a
                        href={item.href}
                        class="nav-link text-sm font-medium transition-colors text-slate-300 hover:text-white"
                        {...(item.href.startsWith('http') ? { rel: 'noopener noreferrer', target: '_blank' } : {})}
                    >
                        {item.label}
                    </a>
                ))}
            </div>

            <!-- CTA Button -->
            <div class="hidden lg:flex items-center gap-8">
                <a href="https://app.myrecruiter.ai" rel="noopener noreferrer" class="login-link text-sm font-medium transition-colors text-white/80 hover:text-white">Log In</a>
                <a href="demo" id="header-cta" class="px-6 py-2.5 rounded-full text-sm font-semibold transition-all bg-white text-emerald-600 hover:bg-emerald-50 hover:shadow-lg">
                    Book a Demo
                </a>
            </div>

            <!-- Mobile Hamburger Button -->
            <button
                id="mobile-menu-btn"
                class="lg:hidden relative w-8 h-8"
                aria-label="Toggle mobile menu"
            >
                <span class="hamburger-line absolute h-0.5 rounded-full transition-all duration-300 bg-white top-2 left-1/2 -translate-x-1/2 w-3"></span>
                <span class="hamburger-line absolute h-0.5 rounded-full transition-all duration-300 bg-white top-1/2 -translate-y-1/2 left-1 right-1"></span>
                <span class="hamburger-line absolute h-0.5 rounded-full transition-all duration-300 bg-white bottom-2 left-1/2 -translate-x-1/2 w-3"></span>
            </button>
        </div>
    </div>
</nav>

<!-- Mobile Menu Modal -->
<div id="mobile-menu" class="lg:hidden fixed inset-0 z-40 bg-slate-900/95 backdrop-blur-lg transition-all duration-300 ease-out translate-x-full opacity-0">
    <div class="flex flex-col items-center pt-32 gap-6 p-8">
        {navLinks.map((item) => (
            <a
                href={item.href}
                class="mobile-nav-link text-2xl font-medium text-white hover:text-emerald-400 transition-colors"
                {...(item.href.startsWith('http') ? { rel: 'noopener noreferrer', target: '_blank' } : {})}
            >
                {item.label}
            </a>
        ))}
        <div class="mt-8 flex flex-col items-center gap-4">
            <a href="https://app.myrecruiter.ai" rel="noopener noreferrer" class="text-lg text-slate-300 hover:text-white transition-colors">Log In</a>
            <div class="w-32 border-t border-slate-600 mt-2"></div>
            <a
                href="demo"
                class="mobile-nav-link px-6 py-2.5 bg-emerald-500 text-white rounded-full font-semibold text-sm hover:bg-emerald-400 transition-all"
            >
                Get a Personalized Demo
            </a>
            <p class="text-slate-400 text-xs">Purpose-built for nonprofits</p>
        </div>
    </div>
</div>

<style>
    /* Scrolled state styles applied via JS */
    #header.scrolled {
        background-color: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(16px);
        border-bottom: 1px solid rgba(226, 232, 240, 0.8);
    }

    #header.scrolled .nav-link {
        color: rgb(51, 65, 85);
    }

    #header.scrolled .nav-link:hover {
        color: rgb(5, 150, 105);
    }

    #header.scrolled .login-link {
        color: rgb(71, 85, 105);
    }

    #header.scrolled .login-link:hover {
        color: rgb(15, 23, 42);
    }

    #header.scrolled #header-cta {
        background-color: #50C878;
        color: white;
        box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    }

    #header.scrolled #header-cta:hover {
        background-color: #34d399;
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    }

    #header.scrolled .hamburger-line {
        background-color: rgb(15, 23, 42);
    }

    /* Mobile menu open state */
    #mobile-menu.open {
        transform: translateX(0);
        opacity: 1;
    }

    /* Hamburger animation */
    #mobile-menu-btn.open .hamburger-line:nth-child(1) {
        top: 50%;
        left: 4px;
        right: 4px;
        width: auto;
        transform: translateX(0) translateY(-50%) rotate(45deg);
    }

    #mobile-menu-btn.open .hamburger-line:nth-child(2) {
        opacity: 0;
    }

    #mobile-menu-btn.open .hamburger-line:nth-child(3) {
        bottom: auto;
        top: 50%;
        left: 4px;
        right: 4px;
        width: auto;
        transform: translateX(0) translateY(-50%) rotate(-45deg);
    }
</style>
