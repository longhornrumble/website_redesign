---
const steps = [
    {
        num: 1,
        title: "Send us your site",
        desc: "Just share your website and any program materials. That's all we need to begin.",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#047857" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/><polyline points="14 2 14 8 20 8"/></svg>`
    },
    {
        num: 2,
        title: "We build & train your assistant",
        desc: "We custom-train it on your programs, your voice, and the real questions your supporters ask. You don't have to do anything.",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#047857" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2a3 3 0 0 0-3 3v7a3 3 0 0 0 6 0V5a3 3 0 0 0-3-3Z"/><path d="M19 10v2a7 7 0 0 1-14 0v-2"/><line x1="12" x2="12" y1="19" y2="22"/></svg>`
    },
    {
        num: 3,
        title: "You review & refine",
        desc: "Test live conversations and request changes. We fine-tune everything until it feels like your best team member.",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#047857" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>`
    },
    {
        num: 4,
        title: "Go live everywhere",
        desc: "Add one line of code to your site — then instantly deploy across email, newsletters, and social. Start converting visitors immediately.",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#047857" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"/><path d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"/><path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"/><path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"/></svg>`
    }
];
---

<section id="setup" class="py-16 sm:py-24 bg-white">
    <div class="max-w-6xl mx-auto px-6">
        <div class="fade-in">
            <div class="text-center mb-16">
                <span class="text-emerald-600 font-semibold text-sm tracking-wide uppercase">A Simple, Done-For-You Setup</span>
                <h2 class="font-display text-3xl md:text-4xl font-semibold text-slate-900 mt-3 mb-4">
                    A fully trained AI team member — live in 48 hours.
                </h2>
                <p class="text-lg text-slate-600 max-w-2xl mx-auto">
                    No technical work. No training. No long setup. We handle everything so your team stays focused on the mission.
                </p>
            </div>
        </div>

        <div class="fade-in" style="transition-delay: 100ms">
            <div class="relative">
                <div class="grid md:grid-cols-2 gap-8 md:gap-x-24 md:gap-y-16 relative" style="z-index: 1">
                    <!-- Step 1 - Top Left -->
                    <div class="rounded-2xl p-8 pr-12 relative" style="background-color: #F9FBFA; border: 1px solid rgba(80, 200, 120, 0.25); box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.08)">
                        <div class="flex items-center gap-4 mb-4">
                            <Fragment set:html={steps[0].icon} />
                            <div class="font-extrabold" style="color: #047857; font-size: 48px; line-height: 1">1</div>
                        </div>
                        <h3 class="font-semibold text-slate-900 mb-3 text-lg">{steps[0].title}</h3>
                        <p class="text-slate-600 text-sm leading-relaxed">{steps[0].desc}</p>

                        <!-- Pulsing dot indicator -->
                        <div class="absolute top-4 right-4">
                            <div class="w-3 h-3 bg-emerald-500 rounded-full" style="animation: sequentialPulse 11s infinite; animation-delay: 0s"></div>
                        </div>

                        <!-- Connecting line to card 2 -->
                        <div class="absolute top-1/2 -right-24 w-24 hidden md:block" style="border-top: 2px dashed rgba(80, 200, 120, 0.2); transform: translateY(-1px)"></div>
                    </div>

                    <!-- Step 2 - Top Right -->
                    <div class="rounded-2xl p-8 pr-12 relative" style="background-color: #F9FBFA; border: 1px solid rgba(80, 200, 120, 0.35); box-shadow: 0px 4px 16px rgba(0, 0, 0, 0.06), 0px 2px 8px rgba(80, 200, 120, 0.08)">
                        <div class="flex items-center gap-4 mb-4">
                            <Fragment set:html={steps[1].icon} />
                            <div class="font-extrabold" style="color: #047857; font-size: 48px; line-height: 1">2</div>
                        </div>
                        <h3 class="font-bold text-slate-900 mb-3 text-lg">{steps[1].title}</h3>
                        <p class="text-slate-600 text-sm leading-relaxed">{steps[1].desc}</p>

                        <!-- Pulsing dot indicator -->
                        <div class="absolute top-4 right-4">
                            <div class="w-3 h-3 bg-emerald-500 rounded-full" style="animation: sequentialPulse 11s infinite; animation-delay: 2.75s"></div>
                        </div>

                        <!-- Connecting line to card 3 -->
                        <div class="absolute -bottom-16 right-1/2 h-16 hidden md:block" style="border-right: 2px dashed rgba(80, 200, 120, 0.2); transform: translateX(1px)"></div>
                    </div>

                    <!-- Step 4 - Bottom Left -->
                    <div class="order-4 md:order-none rounded-2xl p-8 pr-12 relative" style="background-color: #F9FBFA; border: 1px solid rgba(80, 200, 120, 0.25); box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.08)">
                        <div class="flex items-center gap-4 mb-4">
                            <Fragment set:html={steps[3].icon} />
                            <div class="font-extrabold" style="color: #047857; font-size: 48px; line-height: 1">4</div>
                        </div>
                        <h3 class="font-semibold text-slate-900 mb-3 text-lg">{steps[3].title}</h3>
                        <p class="text-slate-600 text-sm leading-relaxed">{steps[3].desc}</p>

                        <!-- Pulsing dot indicator -->
                        <div class="absolute top-4 right-4">
                            <div class="w-3 h-3 bg-emerald-500 rounded-full" style="animation: sequentialPulse 11s infinite; animation-delay: 8.25s"></div>
                        </div>
                    </div>

                    <!-- Step 3 - Bottom Right -->
                    <div class="order-3 md:order-none rounded-2xl p-8 pr-12 relative" style="background-color: #F9FBFA; border: 1px solid rgba(80, 200, 120, 0.25); box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.08)">
                        <div class="flex items-center gap-4 mb-4">
                            <Fragment set:html={steps[2].icon} />
                            <div class="font-extrabold" style="color: #047857; font-size: 48px; line-height: 1">3</div>
                        </div>
                        <h3 class="font-semibold text-slate-900 mb-3 text-lg">{steps[2].title}</h3>
                        <p class="text-slate-600 text-sm leading-relaxed">{steps[2].desc}</p>

                        <!-- Pulsing dot indicator -->
                        <div class="absolute top-4 right-4">
                            <div class="w-3 h-3 bg-emerald-500 rounded-full" style="animation: sequentialPulse 11s infinite; animation-delay: 5.5s"></div>
                        </div>

                        <!-- Connecting line to card 4 -->
                        <div class="absolute top-1/2 -left-24 w-24 hidden md:block" style="border-top: 2px dashed rgba(80, 200, 120, 0.2); transform: translateY(-1px)"></div>
                    </div>
                </div>

                <!-- Tagline below grid -->
                <div class="text-center" style="margin-top: 40px">
                    <div class="mx-auto mb-5" style="width: 600px; max-width: 90%; height: 1px; background: rgba(148, 163, 184, 0.3)"></div>
                    <p class="font-display text-slate-900" style="font-size: 18px; font-weight: 500; letter-spacing: 0.02em; opacity: 0.85; margin-top: 10px">
                        From URL → trained assistant → live everywhere — in 48 hours.
                    </p>
                    <a href="#pricing" class="inline-flex items-center justify-center flex-wrap text-emerald-500 hover:text-emerald-400 font-medium transition-colors group text-lg mt-6">
                        Choose the plan that's right for your&nbsp;
                        <span class="whitespace-nowrap inline-flex items-center gap-2">
                            organization
                            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                            </svg>
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
