// Calculate positions
function getPosition(angle: number, radius: number) {
    const angleRad = (angle - 90) * (Math.PI / 180);
    return {
        x: 50 + radius * Math.cos(angleRad),
        y: 50 + radius * Math.sin(angleRad)
    };
}
---

<section id="meet-them-where-they-are" class="py-16 sm:py-24 bg-slate-50">
    <div class="max-w-6xl mx-auto px-6">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
            <div class="fade-in">
                <span class="text-emerald-600 font-semibold text-sm tracking-wide uppercase">Meet Them Where They Are</span>
                <h2 class="font-display text-3xl md:text-4xl font-semibold text-slate-900 mt-3 mb-6">
                    One team member. Every channel. Always on.
                </h2>
                <div class="space-y-4 text-lg text-slate-600 leading-relaxed">
                    <p>
                        MyRecruiter doesn't just live on your website ‚Äî it meets supporters anywhere they encounter your mission. Emails, newsletters, social posts, printed materials, event flyers, SMS, and more all become invitations to start a conversation.
                    </p>
                    <p>
                        Wherever someone discovers your organization, MyRecruiter pulls them into a guided journey: answering questions, sharing programs, directing them to volunteer or donate, and helping them take the next step.
                    </p>
                    <p class="text-slate-900 font-medium">
                        Your website, posts, emails, and brochures can only wait. MyRecruiter doesn't wait ‚Äî it initiates the conversation the moment someone shows interest. That's why engagement doubles and more supporters take action.
                    </p>
                </div>

                <div class="mt-8 p-6 bg-white rounded-xl border border-slate-200">
                    <div class="flex items-center gap-4 mb-4">
                        <div class="w-12 h-12 rounded-full bg-emerald-100 flex items-center justify-center">
                            <span class="text-emerald-600 font-bold">2x</span>
                        </div>
                        <div>
                            <div class="font-semibold text-slate-900">Doubled conversation volume</div>
                            <div class="text-slate-400 text-sm">When used beyond the website in emails, newsletters, and social</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="fade-in" style="transition-delay: 200ms">
                <!-- Hub and Spoke Animation -->
                <div class="relative w-full max-w-lg mx-auto aspect-square">
                    {channels.map((channel, i) => {
                        const pos = getPosition(channel.angle, 40);
                        const iconPos = getPosition(channel.angle, 45);
                        return (
                            <svg class="absolute inset-0 w-full h-full" viewBox="0 0 100 100">
                                <line
                                    x1="50" y1="50"
                                    x2={pos.x} y2={pos.y}
                                    stroke="#e2e8f0"
                                    stroke-width="0.5"
                                />
                                <circle r="1.5" fill="#50C878">
                                    <animateMotion
                                        dur="2s"
                                        repeatCount="indefinite"
                                        begin={`${i * 0.3}s`}
                                    >
                                        <mpath href={`#path-${i}`} />
                                    </animateMotion>
                                </circle>
                                <path
                                    id={`path-${i}`}
                                    d={`M${pos.x},${pos.y} L50,50`}
                                    fill="none"
                                />
                            </svg>
                        );
                    })}

                    {channels.map((channel, i) => {
                        const pos = getPosition(channel.angle, 45);
                        return (
                            <div
                                class="absolute transform -translate-x-1/2 -translate-y-1/2 flex flex-col items-center"
                                style={`left: ${pos.x}%; top: ${pos.y}%`}
                            >
                                <div class="w-12 h-12 rounded-xl bg-white shadow-lg border border-slate-200 flex items-center justify-center text-xl mb-1">
                                    {channel.icon}
                                </div>
                                <span class="text-xs text-slate-600 font-medium">{channel.name}</span>
                            </div>
                        );
                    })}

                    <!-- Center Hub -->
                    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
                        <div class="w-20 h-20 rounded-2xl shadow-xl shadow-emerald-600/30 flex items-center justify-center overflow-hidden">
                            <img src="/images/icon.webp" alt="MyRecruiter" class="w-full h-full object-cover" loading="lazy" />
                        </div>
                        <div class="absolute -bottom-6 left-1/2 -translate-x-1/2 whitespace-nowrap">
                            <span class="text-sm font-semibold text-slate-900">MyRecruiter</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section CTA -->
        <div class="fade-in text-center mt-12" style="transition-delay: 300ms">
            <a
                href="#results"
                class="inline-flex items-center flex-wrap text-emerald-600 font-medium text-lg hover:text-emerald-700 transition-colors group"
            >
                See what this could look like for your&nbsp;
                <span class="whitespace-nowrap inline-flex items-center gap-2">
                    organization
                    <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                    </svg>
                </span>
            </a>
        </div>
    </div>
</section>
